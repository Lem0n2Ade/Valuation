import numpy as np
import pandas as pd
from pandas import DataFrame as df
import math

#imput 값
node_count=10 # 노드갯수
u=1.1 #상승계수. 차후에 변동성 자동으로 계산하는 파일 만들기  
d=1/u #하락계수
s=10000 #기초자산주가

#노드개수만큼의 0으로 이루어진 n*n 행렬생성
stock_binomial_tree=np.zeros((node_count,node_count))

#가장 첫 번째 노드에 기초자산 주가 할당
stock_binomial_tree[0,0]=s

for i in range(1,node_count):
    for j in range(i+1):
#상승계수는 i-j번, 하락계수는 j만큼 적용
        stock_binomial_tree[j,i]=s*math.pow(u,i-j)*math.pow(d,j)
df.stock_binomial_tree=pd.DataFrame(stock_binomial_tree)
df.stock_binomial_tree
df.stock_binomial_tree.to_excel('기초자산tree.xlsx')  #차후에 링크 지정해서 파일 생성해보기!

for i in range(1,node_count):
    #상승노드의 경우, 이전 노드에서 상승계수만 반영
    stock_binomial_tree[0,i]=stock_binomial_tree[0,i-1]*u
    #하락노듸의 경우, 이전 노드에서 하락계수만 반영
    stock_binomial_tree[1:i+1,i]=stock_binomial_tree[:i,i-1]*d
    
df.stock_binomial_tree=pd.DataFrame(stock_binomial_tree)
df.stock_binomial_tree  
