#노드별 날짜리스트_노드 갯수

import numpy as np
import pandas as pd

#input 정의
평가기준일='2023-06-30'
만기='2030-12-31'
노드갯수=500

start_date=pd.Timestamp(평가기준일)
end_date=pd.Timestamp(만기)

date_range=pd.date_range(start=start_date, end=end_date, periods=노드갯수)
date_array=np.array(date_range)
print(date_array)



#노드별 날짜리스트_노드간격

import numpy as np
import pandas as pd

간격=1
평가기준일='2023-06-30'
만기='2030-12-31'

start_date=pd.Timestamp(평가기준일)  
end_date=pd.Timestamp(만기)

date_range=pd.date_range(start=start_date, end=end_date, freq=f'{간격}D')
# f string / https://blockdmask.tistory.com/429
date_array=np.array(date_range)
print(date_array)
len(date_array)
date_array[0] #type은 datetime64 << date_array는 np로 변환했으므로

type(date_array[0])

